{
  "author": "tony.quetano@planttheidea.com",
  "bin": {
    "create-tsconfig": "./bin/createProjectTsConfig.js"
  },
  "bugs": {
    "url": "https://github.com/planttheidea/build-tools/issues"
  },
  "dependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "git-root": "^1.0.0",
    "prettier": "^3.6.2",
    "release-it": "^19.0.6",
    "rollup": "^4.53.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.2",
    "vitest": "^4.0.9",
    "yargs": "^18.0.0"
  },
  "description": "Build tools for the suite of PTI packages",
  "devDependencies": {
    "@types/react": "^19.2.5",
    "@types/typescript": "^2.0.0",
    "fast-glob": "^3.3.3",
    "ts-node": "^10.9.2"
  },
  "exports": {
    "./*.js": {
      "default": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      }
    },
    "./tsconfig/*.json": "./tsconfig/*.json"
  },
  "files": [
    "bin",
    "dist",
    "tsconfig",
    "LICENSE",
    "package.json"
  ],
  "homepage": "https://github.com/planttheidea/build-tools#readme",
  "license": "MIT",
  "name": "@planttheidea/build-tools",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/planttheidea/build-tools.git"
  },
  "scripts": {
    "build": "npm run build:configs && npm run build:runtime",
    "build:configs": "ts-node scripts/createStandardTsConfigs.ts",
    "dist": "rm -rf dist && npm run build",
    "release": "release-it",
    "release:beta": "release-it --config=.release-it.beta.json",
    "release:scripts": "npm run typecheck && npm run dist",
    "build:runtime": "rollup -c _internal/rollup.config.js",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "type": "module",
  "version": "1.0.0-beta.9"
}
