    "ts-node": "^10.9.2"
  },
  "exports": {
    ".": {
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./rollup": {
      "default": {
        "types": "./dist/rollup.d.ts",
        "default": "./dist/rollup.js"
      }
    }
