    "./vite": {
      "default": {
        "types": "./dist/vite.d.ts",
        "default": "./dist/vite.js"
      }
    },
    "./vitest": {
      "default": {
        "types": "./dist/vitest.d.ts",
        "default": "./dist/vitest.js"
      }
    }
  },
  "files": [
    "bin",
    "dist",
    "templates",
    "LICENSE",
    "package.json"
